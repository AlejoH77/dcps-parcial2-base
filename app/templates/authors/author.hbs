<text>{{model.username}}</text><br><br>
<img src="{{model.profilePicture}}"><br>
<label>First name:</label><text>{{model.firstName}}</text><br><br>
<label>Last name:</label><text>{{model.lastName}}</text><br><br>
<label>Email:</label><text>{{model.email}}</text><br><br>

<label>Posts:</label><br>
{{#if model.posts}}
  <table class="table">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Date of Published</th>
      <th>Content</th>
    </tr>
    </thead>
    <tbody>

    {{#each model.posts as |post|}}
      <tr>
        <td><button type="button" {{action 'delete' post}}>Delete Post</button></td>
        <td>{{post.title}}</td>
        <td>{{post.publishedAt}}</td>
        <td>{{post.content}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
{{else}}
  <h1>This author donÂ´t have posts</h1>
{{/if}}

{{outlet}}